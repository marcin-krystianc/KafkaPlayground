        {
            "name": "Launch kafka-tool (Debug)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            // "environment": [
            //     {
            //         "name": "LD_PRELOAD",
            //         "value": "/usr/lib/gcc/x86_64-linux-gnu/14/libasan.so"
            //     }
            // ],
            "program": "/dotnet/dotnet",
            "args": [
                "${workspaceFolder}/bin/Debug/net8.0/KafkaTool.dll", 
                "producer-consumer", 
                "--config", "allow.auto.create.topics=false",
                "--config", "bootstrap.servers=localhost:40001,localhost:40002", 
                "--topics=200", 
                "--partitions=1",
                "--replication-factor=3", 
                "--min-isr=2", 
                "--messages-per-second=150", 
                "--config", "enable.idempotence=true", 
                "--config", "request.required.acks=-1", 
                "--config", "max.in.flight.requests.per.connection=5",
                "--config", "auto.offset.reset=latest", 
                "--producers=40", 
                "--recreate-topics=false",
            ],
            "setupCommands": [
                {
                    "text": "handle all nostop noprint" // Add other signals as needed
                }
            ],
            // "stopAtEntry": false,
            // "environment": [],
            // "externalConsole": false,
            "miDebuggerPath": "/usr/bin/gdb",
            "MIMode": "gdb",
            "launchCompleteCommand": "exec-run",
        },
        {
            "name": "Debug Both (C# + C++)",
            "configurations": ["C# Debug", "Launch kafka-tool (Debug)"],
            "compounds": true,
            "presentation": {
                "hidden": false,
                "group": "Debug",
                "order": 1
            }
        }
    ]
